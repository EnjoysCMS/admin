{% extends "@a/layout.twig" %}

{% block content %}

    <section class="content">


        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Блоки (Активация)</h2>

            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <h4>Зарегистрированные блоки</h4>
                <ul class="list-group pb-5">
                    {% for block in blocks %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div class="flex-grow-1">
                                <b>{{ block.name }}</b>
                                <br>
                                <small>{{ block.className }}</small>
                            </div>
                            <div>
                                <a class="btn btn-sm btn-primary" href="{{ path('admin/acivateblocks', {"class": block.className}) }}">Добавить</a>
                            </div>
                        </li>
                    {% else %}
                        <li class="list-group-item d-flex justify-content-between align-items-center"><em>отсутствуют</em></li>
                    {% endfor %}
                </ul>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>


{% endblock %}
