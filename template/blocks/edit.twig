{% extends "@a/layout.twig" %}

{% block content %}

    <section class="content">


        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Редактирование блока <b>{{ block.name }}</b></h2>
            </div>
            <!-- /.card-header -->
            <div class="card-body">

                {% if access('@admin_blocks_location') %}
                <div class="my-3">
                    <a class="mx-1 btn btn-sm  btn-sm btn-outline-dark"
                       href="{{ path('@admin_blocks_location', {"id": block.id}) }}"><i class="fa fa-edit"></i>
                        Управление местоположением блока </a>
                </div>
                {% endif %}
                <div class="my-3">
                    <p>
                        Для отображения блока в шаблоне, вставьте туда код
                    </p>
                    <code class="user-select-all">
                        &lt;!-- Блок: "{{ block.name }}" --&gt;<br>
                        {{ '{{' }} ViewBlock('{{block.id}}') {{ '}}' }}<br>
                        &lt;!-- /Блок: "{{ block.name }}" --&gt;
                    </code>

                </div>

                {{ form.output|raw }}
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
{% endblock %}

{% block scripts %}
    {{ contentEditor|raw }}
{% endblock %}
