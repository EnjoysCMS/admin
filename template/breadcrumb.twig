{% set active = breadcrumbs|last %}
{% set breadcrumbs = breadcrumbs|slice(0,-1)%}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>{{ active }}</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    {% for link,title in breadcrumbs %}
                    <li class="breadcrumb-item"><a href="{{ link }}">{{ title }}</a></li>
                    {% endfor %}
                    <li class="breadcrumb-item active">{{ active }}</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
