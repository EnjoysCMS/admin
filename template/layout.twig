<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ _title ?? ('Admin - ' ~ setting('sitename')) }}</title>
    {% do asset('js', [
        {0: 'modules/admin/template/assets/custom.js', 'minify': false}
    ]) %}
    {% block __css__ deferred %}
    {{ eCSS() }}
    {{ getStyles() }}
    {% endblock %}
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

    {% include "@a/navbars/navbar-top.twig" %}

    {% include "@a/navbars/navbar-side.twig" %}
    <!-- Content Wrapper. Contains page content -->
    {% apply stylesCatcher | scriptsCatcher %}
        <div class="content-wrapper">
            {% block breadcrumb %}
                {% include "@a/breadcrumb.twig" %}
            {% endblock %}

            {% block content %}


                <section class="content">

                    <!-- Default box -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Title</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse"
                                        data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fas fa-minus"></i></button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove"
                                        data-toggle="tooltip"
                                        title="Remove">
                                    <i class="fas fa-times"></i></button>
                            </div>
                        </div>
                        <div class="card-body">
                            Start creating your amazing application!
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            Footer
                        </div>
                        <!-- /.card-footer-->
                    </div>
                    <!-- /.card -->

                </section>
            {% endblock %}
            <!-- /.content -->
        </div>
    {% endapply %}
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <strong>Copyright &copy; 2014-2020 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
        All rights reserved.
        <div class="float-right d-none d-sm-inline-block">
            <b>Version</b> 3.1.0
        </div>
    </footer>


</div>
<!-- ./wrapper -->

{% block __js__ deferred %}
{{ eJS() }}
{{ getScripts() }}
{% endblock %}

{% block scripts %}
{% endblock %}
<!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->

</body>
</html>
