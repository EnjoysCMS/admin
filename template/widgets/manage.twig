{% extends "@a/layout.twig" %}

{% block content %}

    <section class="content">


        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Список доступных виджетов</h2>

            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <ul class="list-group pb-5">
                    {% for widget in allowedWidgets %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div class="flex-grow-1">
                                <b>{{ widget.name }}</b>
                                <br>
                                <small>{{ widget.className }}</small>
                            </div>
                            <div class="d-flex align-content-end align-items-center">
                                {% if widget.className in installedWidgets %}
                                    <div class="h4 text-success m-3"><i class="fa fa-check"></i></div>
                                {% endif %}
                                <div>
                                <a class="btn btn-sm btn-primary"
                                   href="{{ path('@admin_widgets_activate', {"class": widget.className}) }}">Добавить</a>
                                </div>
                            </div>
                        </li>
                    {% else %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <em>отсутствуют</em></li>
                    {% endfor %}
                </ul>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>


{% endblock %}
