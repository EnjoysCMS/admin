{% extends "@a/layout.twig" %}

{% block content %}

    <section class="content">


        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Виджеты (Активация)</h2>

            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <h4>Не активированные виджеты</h4>
                <ul class="list-group pb-5">
                    {% for path, item in notActiveWidgets %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div class="flex-grow-1">
                                <b>{{ item.name }}</b>
                                <br>
                                <small>{{ path }}</small>
                            </div>
                            <div>
                                <a class="btn btn-sm btn-primary" href="{{ path('admin/acivatewidget', {"class": path}) }}">Установить</a>
                            </div>
                        </li>
                    {% else %}
                        <li class="list-group-item d-flex justify-content-between align-items-center"><em>отсутствуют</em></li>
                    {% endfor %}
                </ul>
                <h4>Активированные виджеты</h4>
                <ul class="list-group text-muted">
                    {% for path, item in activeWidgets %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div class="flex-grow-1">
                                <b>{{ item.name }}</b>
                                <br>
                                <small>{{ path }}</small>
                            </div>
                        </li>
                    {% else %}
                        <li class="list-group-item d-flex justify-content-between align-items-center"><em>отсутствуют</em></li>
                    {% endfor %}
                </ul>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>


{% endblock %}
