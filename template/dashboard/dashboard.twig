{% do asset('js', [
    {0: '../modules/admin/node_modules/admin-lte/plugins/chart.js/Chart.min.js','minify': true},
    {0: '../modules/admin/node_modules/admin-lte/plugins/sparklines/sparkline.js','minify': false},
