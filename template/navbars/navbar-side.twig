<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="index3.html" class="brand-link">
        <img src="/assets/adminLTE/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">EnjoysCMS</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="/assets/adminLTE/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">{{ _user.getName }}</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search"
                       aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                {% if access2route('admin/index') %}
                    <li class="nav-item">
                        <a href="{{ path('admin/index') }}" class="nav-link">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Dashboard
                            </p>
                        </a>
                    </li>
                {% endif %}

                {% if access2route('admin/setting') %}
                    <li class="nav-item">
                        <a href="{{ path('admin/setting') }}" class="nav-link text-warning">
                            <i class="nav-icon fa fa-cogs"></i>
                            <p>
                                Настройки
                            </p>
                        </a>
                    </li>
                {% endif %}

                {% if accessInRoutes(['admin/users', 'admin/adduser', 'admin/groups']) %}
                    <li class="nav-item">
                        <a href="/admin/users" class="nav-link">
                            <i class="nav-icon fas fa-users-cog"></i>
                            <p>
                                Пользователи
                                <i class="right fas fa-angle-right"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">

                            {% if access2route('admin/users') %}
                                <li class="nav-item">
                                    <a href="{{ path('admin/users') }}" class="nav-link">
                                        <i class="fas fa-user-friends nav-icon"></i>
                                        <p>Все пользователи</p>
                                    </a>
                                </li>
                            {% endif %}

                            {% if access2route('admin/adduser') %}
                                <li class="nav-item">
                                    <a href="{{ path('admin/adduser') }}" class="nav-link">
                                        <i class="fas fa-user-plus nav-icon"></i>
                                        <p>Добавить пользователя</p>
                                    </a>
                                </li>
                            {% endif %}

                            {% if access2route('admin/groups') %}
                                <li class="nav-item">
                                    <a href="{{ path('admin/groups') }}" class="nav-link">
                                        <i class="fas fa-users nav-icon"></i>
                                        <p>Группы</p>
                                    </a>
                                </li>
                            {% endif %}

                        </ul>
                    </li>
                {% endif %}


                {% if accessInRoutes(['admin/managewidgets', 'admin/editwidget']) %}
                <li class="nav-item">
                    <a href="/admin/widgets" class="nav-link">
                        <i class="nav-icon fas fa-tree"></i>
                        <p>
                            Виджеты
                            <i class="fas fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        {% if access2route('admin/managewidgets') %}
                            <li class="nav-item">
                                <a href="{{ path('admin/managewidgets') }}" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Менеджер виджетов</p>
                                </a>
                            </li>
                        {% endif %}

                    </ul>
                    {% endif %}
                </li>

                {% if accessInRoutes(['admin/blocks', 'admin/addblock', 'admin/setupblocks']) %}
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-tree"></i>
                        <p>
                            Блоки
                            <i class="fas fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        {% if access2route('admin/blocks') %}
                            <li class="nav-item">
                                <a href="{{ path('admin/blocks') }}" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Настройка блоков</p>
                                </a>
                            </li>
                        {% endif %}

                        {% if access2route('admin/addblock') %}
                            <li class="nav-item">
                                <a href="{{ path('admin/addblock') }}" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Добавить новый блок</p>
                                </a>
                            </li>
                        {% endif %}

                        {% if access2route('admin/setupblocks') %}
                            <li class="nav-item">
                                <a href="{{ path('admin/setupblocks') }}" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Установка блоков</p>
                                </a>
                            </li>
                        {% endif %}

                    </ul>
                    {% endif %}
                </li>
                {% set appLinks = getApplicationAdminLinks() %}



                        <li class="nav-item n">
                            <a href="#" class="nav-link ">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    @Application
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>

                            <ul class="nav nav-treeview">
                                {% for name, appLink in appLinks %}
                                    {% if access2route(name) %}
                                        <li class="nav-item">
                                            <a href="{{ path(name) }}" class="nav-link">
                                                <i class="fas fa-angle-right nav-icon"></i>
                                                <p>{{ appLink.getOption('adminTitle') }}</p>
                                            </a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </li>


                {% set modules = getModules() %}

                {% for module in modules %}
                    {% if accessInRoutes(module.adminLinks|keys) %}
                        <li class="nav-item n">
                            <a href="#" class="nav-link ">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    {{ module.moduleName }}
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>

                            <ul class="nav nav-treeview">
                                {% for link, name in module.adminLinks %}
                                    {% if access2route(link) %}
                                        <li class="nav-item">
                                            <a href="{{ path(link) }}" class="nav-link">
                                                <i class="fas fa-angle-right nav-icon"></i>
                                                <p>{{ name }}</p>
                                            </a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </li>
                    {% endif %}
                {% endfor %}

            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
