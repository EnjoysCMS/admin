{
    "name": "enjoyscms/admin",
    "description": "Module Admin for EnjoysCMS",
    "type": "enjoyscms-module",
    "require": {
        "php": "^8.1",
        "enjoyscms/core": "^6.0@dev",
        "enjoys/forms": "^5.0",
        "enjoys/bootstrap4-renderer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "EnjoysCMS\\Module\\Admin\\": "src/",
            "EnjoysCMS\\Module\\Admin\\Widgets\\": "widgets/",
            "EnjoysCMS\\Module\\Admin\\Composer\\Scripts\\": "scripts/"
        }
    },
    "extra": {
        "module-name": "Admin panel"
    },
    "scripts": {
        "admin-assets-install": "EnjoysCMS\\Module\\Admin\\Composer\\Scripts\\AssetsInstallCommand",
        "post-install-cmd": [
            "@print-module-name Admin",
            "@admin-assets-install"
        ],
        "post-update-cmd": [
            "@print-module-name Admin",
            "@admin-assets-install"
        ]
    },
    "require-dev": {
        "vimeo/psalm": "^4.21|^5.0"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "oomphinc/composer-installers-extender": true
        }
    }
}
